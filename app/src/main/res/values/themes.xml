<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Registration" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="profile_shape">
        <item name="cornerSize">50%</item>
    </style>


    <style name="txt_header">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="txt_title">
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>
    
    <style name="editTextCommon">
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/input_border</item>
    </style>

    <style name="styleSpinner">
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:background">@drawable/input_border</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
    </style>
    
    <style name="btn_common">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="btn_previous" parent="btn_common">
        <item name="android:textColor">@color/btn_background</item>
        <item name="android:background">@drawable/btn_previous</item>
    </style>

    <style name="Theme.Registration" parent="Base.Theme.Registration" />
</resources>